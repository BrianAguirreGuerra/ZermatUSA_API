@model DL.Cliente

@{
    ViewData["Title"] = "Registro de Cliente";
}
<style>
    body {
        display: flex;
        justify-content: center;
        align-items: center;
        height: 90vh;
        margin: 0;
        padding-top: 0 !important;
    }

    form {
        margin-top: 20px;
        padding: 20px;
        border: 1px solid #ccc;
        border-radius: 5px;
        text-align: center;
    }

    .alert-info {
        background-color: #d1ecf1;
        border-color: #bee5eb;
        color: #0c5460;
    }

    .navbar {
        display: none !important;
    }

    .footer {
        display: none !important;
    }

    .center-content {
        display: flex;
        flex-direction: column;
        align-items: center;
    }
</style>

<div style="width: 50%; margin: auto;">
    @if (TempData["Message"] != null)
    {
        @if (TempData.ContainsKey("IsError") && (bool)TempData["IsError"])
        {
            <div class="alert alert-danger">@TempData["Message"]</div>
        }
        else
        {
            <div class="alert alert-info">@TempData["Message"]</div>
        }

        TempData.Remove("Message");
        TempData.Remove("IsError");
    }

    <form asp-controller="Clientes" asp-action="Registrar" method="post" class="center-content">
        <h2 style="text-align: center;">Registro de Cliente</h2>
        <div class="row">
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Nombre">Nombre:</label>
                    <input type="text" class="form-control" id="Nombre" name="Nombre" required>
                </div>
                <div class="form-group">
                    <label for="ApellidoPaterno">Apellido Paterno:</label>
                    <input type="text" class="form-control" id="ApellidoPaterno" name="ApellidoPaterno" required>
                </div>
                <div class="form-group">
                    <label for="ApellidoMaterno">Apellido Materno:</label>
                    <input type="text" class="form-control" id="ApellidoMaterno" name="ApellidoMaterno">
                </div>
            </div>
            <div class="col-md-6">
                <div class="form-group">
                    <label for="Email">Email:</label>
                    <input type="email" class="form-control" id="Email" name="Email" required>
                </div>
                <div class="form-group">
                    <label for="Pass">Contraseña:</label>
                    <input type="password" class="form-control" id="Pass" name="Pass" required>
                </div>
            </div>
        </div>
        <p></p>
        <button type="submit" class="btn btn-primary">Registrar</button>

        <label>Tienes una cuenta?<a href="@Url.Action("FormLogin", "Clientes")" class="btn btn-link">Iniciar Sesión</a></label>
    </form>
</div>
